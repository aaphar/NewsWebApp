@page
@using Application.Common.Models;
@model WebUI.Pages.admin.categories.translation.DetailModel
@{
}

<section class="content">

    <!-- Default box -->
    <div style="margin: 10px;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-text-width"></i>
                    Details
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <dl>
                    @foreach (var property in typeof(CategoryTranslationDto).GetProperties())
                    {
                        <dt>@property.Name</dt>
                        <dd>@property.GetValue(Model.Translation)</dd>

                    }


                    <input hidden asp-for="CategoryId" value="@Model?.Translation?.CategoryId" />

                    <td class="project-actions text-right">
                        <form method="post">
                            <a class="btn btn-info btn-sm"
                               asp-page="/admin/categories/translation/edit"
                               asp-route-id="@Model?.Translation?.Id/@Model?.Translation?.CategoryId">
                                <i class="fas fa-pencil-alt"></i>
                                Edit
                            </a>

                            <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@Model?.Translation?.Id')">
                                <i class="fas fa-trash"></i>
                                Delete
                            </a>

                            <div class="modal" id="deleteConfirmationModal_@Model?.Translation?.Id" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirm Deletion</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@Model?.Translation?.Id">
                                                Yes
                                            </button>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </td>
                </dl>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>                <!-- /.card -->

</section>